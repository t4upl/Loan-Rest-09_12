<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">username2</property>
        <property name="hibernate.connection.password">password2</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/debtdb</property>
        <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">validate</property>
        <property name="show_sql">false</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>


        <mapping class="com.journaldev.entity.Customer"/>
        <mapping class="com.journaldev.entity.Product"/>
        <mapping class="com.journaldev.entity.ProductTypeSetting"/>
        <mapping class="com.journaldev.entity.SettingType"/>
        <mapping class="com.journaldev.entity.ProductSetting"/>
    </session-factory>
</hibernate-configuration>
